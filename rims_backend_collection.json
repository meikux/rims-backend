{
  "info": {
    "name": "Restaurant Backend API",
    "_postman_id": "abcd1234-5678-efgh-ijkl-9876543210",
    "description": "Postman collection for Auth, Inventory, Inventory Alerts, Staff Scheduling, Supplier Management, and Reports endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"manager1\",\n  \"password\": \"securePass123\",\n  \"role\": \"manager\"\n}"
            },
            "url": { "raw": "http://localhost:3000/auth/register" }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"manager1\",\n  \"password\": \"securePass123\"\n}"
            },
            "url": { "raw": "http://localhost:3000/auth/login" }
          }
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Add Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomatoes\",\n  \"category\": \"Vegetables\",\n  \"quantity\": 50,\n  \"unit\": \"kg\",\n  \"expiryDate\": \"2025-12-01\",\n  \"lowStockThreshold\": 10\n}"
            },
            "url": { "raw": "http://localhost:3000/inventory" }
          }
        },
        {
          "name": "Get Inventory",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/inventory" }
          }
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"quantity\": 30\n}" },
            "url": { "raw": "http://localhost:3000/inventory/{{itemId}}" }
          }
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/inventory/{{itemId}}" }
          }
        }
      ]
    },
    {
      "name": "Inventory Alerts",
      "item": [
        {
          "name": "Get Low-Stock Items",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/inventory/alerts" }
          }
        }
      ]
    },
    {
      "name": "Staff Scheduling",
      "item": [
        {
          "name": "Add Shift",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"staffId\": \"{{staffId}}\",\n  \"shiftDate\": \"2025-11-27\",\n  \"startTime\": \"09:00\",\n  \"endTime\": \"17:00\",\n  \"role\": \"chef\"\n}"
            },
            "url": { "raw": "http://localhost:3000/schedule" }
          }
        },
        {
          "name": "Get All Shifts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/schedule" }
          }
        },
        {
          "name": "Get My Shifts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/schedule/my" }
          }
        },
        {
          "name": "Update Shift",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"endTime\": \"18:00\"\n}" },
            "url": { "raw": "http://localhost:3000/schedule/{{shiftId}}" }
          }
        },
        {
          "name": "Delete Shift",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/schedule/{{shiftId}}" }
          }
        }
      ]
    },
    {
      "name": "Supplier Management",
      "item": [
        {
          "name": "Add Supplier",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Fresh Farms\",\n  \"contactInfo\": \"freshfarms@example.com\",\n  \"itemsSupplied\": [\"Tomatoes\", \"Lettuce\"]\n}"
            },
            "url": { "raw": "http://localhost:3000/suppliers" }
          }
        },
        {
          "name": "Get Suppliers",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/suppliers" }
          }
        },
        {
          "name": "Place Supplier Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"name\": \"Tomatoes\", \"quantity\": 100, \"unit\": \"kg\" },\n    { \"name\": \"Lettuce\", \"quantity\": 50, \"unit\": \"kg\" }\n  ]\n}"
            },
            "url": { "raw": "http://localhost:3000/suppliers/{{supplierId}}/order" }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Inventory Report",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/reports/inventory" }
          }
        },
        {
          "name": "Staff Report",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:3000/reports/staff" }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "itemId", "value": "" },
    { "key": "staffId", "value": "" },
    { "key": "shiftId", "value": "" },
    { "key": "supplierId", "value": "" }
  ]
}
